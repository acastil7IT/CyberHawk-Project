# SecureNet Monitor Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://admin:secure123@postgres:5432/securenet
POSTGRES_DB=securenet
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure123

# Redis Configuration
REDIS_URL=redis://redis:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# API Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-for-external-integrations

# Network Configuration
CAPTURE_INTERFACE=  # Leave empty to capture on all interfaces
PACKET_BUFFER_SIZE=1000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=admin123

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password
ALERT_EMAIL_FROM=securenet@yourcompany.com
ALERT_EMAIL_TO=security-team@yourcompany.com

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Performance Configuration
MAX_WORKERS=4
DB_POOL_SIZE=10
REDIS_POOL_SIZE=10

# Development Configuration
DEBUG=false
RELOAD=false